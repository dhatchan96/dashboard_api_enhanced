    "severity": "CRITICAL_BOMB",
    "type": "SCHEDULED_THREAT",
    "language": "*",
    "pattern": "if.*(?:date|datetime|time).*[><=].*\\d{4}.*:.*(?:delete|remove|destroy|format|kill|rmdir|unlink)",
    "remediation_effort": 90,
    "tags": [
      "logic-bomb",
      "time-trigger",
      "malicious-code",
      "date-based"
    ],
    "enabled": true,
    "custom": false,
    "threat_category": "SCHEDULED_THREAT"
  },
